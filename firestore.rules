
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isDocOwner(data) {
      return isSignedIn() && data.ownerId == request.auth.uid;
    }

    function isTeamMember(data) {
      return isSignedIn() && data.teamMembers[request.auth.uid] != null;
    }

    function isTeamAdmin(data) {
      return isSignedIn() && (data.teamMembers[request.auth.uid] == 'admin' || data.teamMembers[request.auth.uid] == 'owner');
    }

    // --- COLLECTION RULES ---

    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['tier']);
      allow delete: if false; // Users cannot delete profiles directly
    }

    match /files/{fileId} {
      allow read: if isDocOwner(resource.data) || isTeamMember(resource.data) || resource.data.shareToken != null;
      allow create: if isSignedIn(); // In production, add quota checks here
      allow update: if isDocOwner(resource.data) || isTeamAdmin(resource.data);
      allow delete: if isDocOwner(resource.data) || isTeamAdmin(resource.data);
    }

    match /jobs/{jobId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn();
      allow update: if false; // Jobs only updated by Cloud Functions
      allow delete: if false;
    }

    match /folders/{folderId} {
      allow read, write: if isDocOwner(resource.data) || isTeamMember(resource.data);
    }

    match /teams/{teamId} {
      allow read: if isSignedIn() && resource.data.members[request.auth.uid] != null;
      allow write: if isSignedIn() && resource.data.ownerId == request.auth.uid;
    }

    match /activityLogs/{logId} {
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isTeamAdmin(resource.data));
      allow write: if false; // System only
    }

    match /notifications/{notifId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isRead', 'readAt']);
      allow write: if false; // System only
    }
  }
}
